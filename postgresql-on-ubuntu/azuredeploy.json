{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "region": {
      "type": "string",
      "defaultValue": "West US",
      "metadata": {
        "Description": "Location of the resource group and all contained resources"
      }
    },
    "storageAccountNamePrefix": {
      "type": "string",
      "metadata": {
        "Description": "Unique name of the new storage account that will be created to store virtual machine VHDs"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "Description": "Domain name of the publicly accessible Apache server"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "azureuser",
      "metadata": {
        "Description": "Virtual machine administrator username"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "Description": "Virtual machine administrator password"
      }
    },
    "replicatorPassword": {
      "type": "string"
    },
    "jumpbox": {
      "type": "string",
      "defaultValue": "Disabled",
      "allowedValues": [
        "Enabled",
        "Disabled"
      ],
      "metadata": {
        "Description": "The flag allowing to enable or disable provisioning of the jumpbox VM that can be used to access the MongoDB environment"
      }
    },
    "tshirtSize": {
      "type": "string",
      "defaultValue": "XSmall",
      "allowedValues": [
        "Small",
        "Medium",
        "Large"
      ],
      "metadata": {
        "Description": "T-shirt size of the MongoDB deployment"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "vnet",
      "metadata": {
        "Description": "Virtual network name"
      }
    }
  },
  "variables": {
    "templateBaseUrl": "https://raw.githubusercontent.com/trentmswanson/azurermtemplates/master/postgresql-on-ubuntu/",
    "sharedTemplateUrl": "[concat(variables('templateBaseUrl'), 'shared-resources.json')]",
        "tshirtSizeSmall": {
            "vmSize": "Standard_A2",
            "slaveCount": 1,
            "diskSize": 1023,
            "vmTemplate": "[concat(variables('templateBaseUrl'), 'database-2disk-resources.json')]"
        },
        "tshirtSizeMedium": {
            "vmSize": "Standard_A2",
            "slaveCount": 1,
            "diskSize": 1023,
            "vmTemplate": "[concat(variables('templateBaseUrl'), 'database-8disk-resources.json')]"
        },
        "tshirtSizeLarge": {
            "vmSize": "Standard_A3",
            "slaveCount": 2,
            "diskSize": 1023,
            "vmTemplate": "[concat(variables('templateBaseUrl'), 'database-16disk-resources.json')]"
        },
    "clusterSpec": "[variables(concat('tshirtSize', parameters('tshirtSize')))]",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',parameters('virtualNetworkName'))]",
    "subnetDmzRef": "[concat(variables('vnetID'),'/subnets/',parameters('subnetDmzName'))]",
    "subnetDbRef": "[concat(variables('vnetID'),'/subnets/',parameters('subnetDbName'))]",
    "jumpboxTemplateYes": "jumpbox-resources.json",
    "jumpboxTemplateNo": "jumpbox-disabled.json",
    "jumpboxTemplateUrl": "[concat(variables('templateBaseUrl'), variables(concat('jumpboxTemplate',parameters('jumpbox'))))]",
    "ubuntuVMImage": "b39f27a8b8c64d52b05eac6a62ebad85__Ubuntu-14_04_2_LTS-amd64-server-20150309-en-us-30GB",
    "osSettings": {
      "scripts": [
        "https://raw.githubusercontent.com/azurermtemplates/azurermtemplates/master/postgresql-multi-vm-ubuntu/install_postgresql.sh",
        "https://raw.githubusercontent.com/azurermtemplates/azurermtemplates/master/shared_scripts/ubuntu/vm-disk-utils-0.1.sh"
      ],
      "sourceImage": "[concat('/', subscription().subscriptionId, '/services/images/', variables('ubuntuVMImage') )]"
    },
    "networkSettings": {
      "vnetName": "[parameters('virtualNetworkName')]",
      "addressPrefix": "10.0.0.0/16",
      "subnets": {
        "dmz": {
          "name": "dmz",
          "prefix": "10.0.0.0/24",
          "vnet": "[parameters('virtualNetworkName')]"
        },
        "data": {
          "name": "data",
          "prefix": "10.0.1.0/24",
          "vnet": "[parameters('virtualNetworkName')]"
        }
      }
    },
    "availabilitySetSettings": {
      "name": "[parameters('dbAvailabilitySetName')]",
      "fdCount": "[parameters('platformFaultDomainCount')]",
      "udCount": "[parameters('platformUpdateDomainCount')]"
    }
  },
  "resources": [
    {
      "name": "shared",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('sharedTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "storageAccountName": {
            "value": "[concat(parameters('storageAccountNamePrefix'),'shared')]"
          },
          "region": {
            "value": "[parameters('region')]"
          },
          "networkSettings": {
            "value": "[variables('networkSettings')]"
          },
          "availabilitySetSettings": {
            "value": "[variables('availabilitySetSettings')]"
          }
        }
      }
    },
    {
      "name": "master-node",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('clusterSpec').vmTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "region": {
            "value": "[parameters('region')]"
          },
          "storageAccountNamePrefix": {
            "value": "[parameters('storageAccountNamePrefix')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "replicatorPassword": {
            "value": "[parameters('replicatorPassword')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "vmCount": {
            "value": 1
          },
          "namespace": {
            "value": "master"
          },
          "diskSize": {
            "value": "[parameters('dataDiskSizeGB')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnets.data]"
          },
          "availabilitySetName": {
            "value": "[variables('availabilitySetSettings').name]"
          },
          "masterIpAddress": {
            "value": "10.0.1.5"
          }
        }
      }
    },
    {
      "name": "slave-nodes",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'master-node')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('clusterSpec').vmTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "region": {
            "value": "[parameters('region')]"
          },
          "storageAccountNamePrefix": {
            "value": "[parameters('storageAccountNamePrefix')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "replicatorPassword": {
            "value": "[parameters('replicatorPassword')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "vmCount": {
            "value": "[parameters('clusterSpec').slaveCount]"
          },
          "namespace": {
            "value": "slave"
          },
          "diskSize": {
            "value": "[parameters('dataDiskSizeGB')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnets.data]"
          },
          "availabilitySetName": {
            "value": "[variables('availabilitySetSettings').name]"
          },
          "masterIpAddress": {
            "value": "[reference('master-node').outputs.masterip.value]"
          }
        }
      }
    },
    {
      "name": "jumpbox",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('jumpboxTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "storageAccountName": {
            "value": "[concat(parameters('storageAccountPrefix'),'shared')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "region": {
            "value": "[parameters('region')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnet.dmz]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}